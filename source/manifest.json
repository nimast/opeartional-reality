{
  "name": "Operational Reality",
  "version": "0.0.1",
  "description": "An awesome new browser extension",
  "homepage_url": "https://github.com/fregante/browser-extension-template",
  "manifest_version": 2,
  "minimum_chrome_version": "74",
  "applications": {
	"gecko": {
	  "id": "awesome-extension@notlmn.github.io",
	  "strict_min_version": "67.0"
	}
  },
  "icons": {
	"128": "icon.png"
  },
  "permissions": [
	"https://github.com/fregante/browser-extension-template/*",
	"storage",
	"activeTab"
  ],
  "content_scripts": [
	{
	  "run_at": "document_start",
	  "matches": [
		"*://*/*"
	  ],
	  "js": [
		"content.js"
	  ],
	  "css": [ "content.css" ]
	}
  ],
  "options_ui": {
	"chrome_style": true,
	"page": "options.html"
  },
  "background": {
	"persistent": false,
	"scripts": [
	  "background.js"
	]
  }
}
